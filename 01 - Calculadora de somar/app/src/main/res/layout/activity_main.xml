<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pdm.ifpb.edu.br.calculadoradesomar.MainActivity">

    <EditText
        android:id="@+id/etValor1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Digite o primeiro valor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.383" />

    <EditText
        android:id="@+id/etValor2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Digite o segundo valor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etValor1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.100" />


    <Button
        android:id="@+id/btSomar"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Somar"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="107dp"
        app:layout_constraintTop_toBottomOf="@+id/etValor2"
        tools:ignore="MissingConstraints" />

</android.support.constraint.ConstraintLayout>
